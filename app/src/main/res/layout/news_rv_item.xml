<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_medium"
    app:cardBackgroundColor="@color/grey"
    app:cardCornerRadius="@dimen/corners_radius_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/idIV_News"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/idTV_NewsHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idIV_News"
            android:layout_margin="@dimen/margin_small"
            android:maxLines="2"
            android:padding="@dimen/padding_small"
            android:text="@string/news_heading"
            android:textColor="@color/yellow"
            android:textSize="@dimen/textSize_heading"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTV_NewsSubHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTV_NewsHeading"
            android:layout_margin="@dimen/margin_small"
            android:maxLines="3"
            android:padding="@dimen/padding_small"
            android:text="@string/sub_heading"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_subHeading" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>